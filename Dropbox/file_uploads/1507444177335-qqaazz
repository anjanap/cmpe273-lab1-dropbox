Purchase mgmt

vender- venderID venderName location
customer- customerID name email address payment
product- productID productName vendorID inventoryQuantity
purchase- purchaseID venderID productID quantity cost date
customerOrders- orderID customerID productID quantity total


Create tables:
create table vendor(vendorID INTEGER AUTOINCREMENT PRIMARY KEY NOT NULL, vendorName VARCAHR(50), location VARCHAR(50));
create table customer(customerID INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, customerName VARCAHR(50), email VARCHAR(50), address VARCHAR(50), payment VARCHAR(50));
create table product (productID INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,productName CHAR(50),vendorID INT, inventoryQuantity INT, FOREIGN KEY(vendorID) REFERENCES vendor(vendorID));
create table purchase(purchaseID INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,vendorID INT, productID INT, quantity INT,cost INT, year INT, FOREIGN KEY(vendorID) REFERENCES vendor(vendorID), FOREIGN KEY(productID) REFERENCES product(productID));
create table customerOrders(orderID INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,customerID INT,productID INT, quantity INT,FOREIGN KEY(customerID) REFERENCES customer(customerID),FOREIGN KEY(productID) REFERENCES product(productID));

